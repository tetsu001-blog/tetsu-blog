[
  {{- $pages := where .Site.RegularPages "Type" "in" (slice "posts") -}}
  {{- $pages = where $pages "Draft" false -}}
  {{- range $index, $page := $pages -}}
    {{- if $index -}},{{- end -}}
    {
      "title": {{- .Title | plainify | jsonify -}},
      "permalink": "{{- .Permalink -}}",
      "date": "{{- .Date.Format "2006-01-02" -}}",
      "content": {{- .Plain | truncate 200 | jsonify -}}
    }
  {{- end -}}
]
